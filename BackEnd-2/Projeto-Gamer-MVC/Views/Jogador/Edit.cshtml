@model Jogador

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/Jogador.css">

<section class="container-grid cadastro-equipes">
    <form method="post" action='@Url.Action("Atualizar")' enctype="multipart/form-data" class="frm-cad-equipes">
    <div class="cadequipe-titulo">
        <h1>Editar jogadores</h1>
        <hr>
    </div>
    <input type="hidden" class="form-control" name="IdJogador" aria-describedby="NameHelp" value="@ViewBag.Jogador.IdJogador">
    <input type="hidden" name="IdEquipe" value="@ViewBag.Jogador.IdEquipes">
    <select class="campo-entrada" id="equipe-select" aria-label="Default select example" name="Nome">
        <option selected>Selecione uma Equipe</option>
        @foreach (Equipes item in ViewBag.IdEquipes)
            {
                if (item.IdEquipes == ViewBag.Jogador.IdEquipe)
                {
                    <option value=@item.IdEquipes>@item.Nome</option>
                }
                else
                {
                    <option value=@item.IdEquipes>@item.Nome</option>
                }
            }
    </select>
    <input class="campo-entrada" type="text" name="Nome" id="nome-jogador" placeholder="Digite o nome do Jogador:">
    <input class="campo-entrada" type="email" name="Email" id="email-jogador" placeholder="Digite o Email do Jogador:">
    <input class="campo-entrada" type="password" name="Senha" id="senha" placeholder="Digite a Senha:">
    <button type="submit">Atualizar</button>




</form>
</section>
